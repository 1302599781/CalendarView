<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_calendar_root"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:background="@drawable/selector_bg"
    android:clickable="true"
    android:focusable="true"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_calendar_over"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/shape_circle_item_blue"
            android:gravity="center"
            android:text="期"
            android:textColor="#fff"
            android:textSize="8sp"
            android:visibility="gone"
            />

        <Space
            android:layout_width="6dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_item_calendar_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="时间显示"
        android:textColor="#222"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_item_calendar_thing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:background="@drawable/shape_circle_item_red"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="8sp"
        android:visibility="gone"
        tools:text="11间"/>
</RelativeLayout>